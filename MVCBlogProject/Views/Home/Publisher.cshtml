@model MVCBlog.Domain.Entities.Essay

@{
    ViewData["Title"] = "Publisher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Publicação</h2>
    <hr />
    <div class="container">
        <div class="col-md-10">
            <form asp-action="Publisher">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="nav-item"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtitle" class="nav-item"></label>
                    <input asp-for="Subtitle" class="form-control" />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Body" class="nav-item"></label>
                    <textarea asp-for="Body" class="form-control input-lg" rows="6"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div class="clearfix">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>